<!DOCTYPE html>
<html lang="en">
<%- include('partials/header'); %>
<body>
    <%- include('partials/nav'); %>
    <%- include('partials/hero'); %>
    <main class="view">
        <div class="main-container">
            <h2>Edit</h2>
            <div class="grid grid-container1x">
                <form id="update-book" action="/books/<%= book._id %>" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="<%= book._id %>">
                    <div>
                        <label for="title">Title</label>
                        <input type="text" name="title" maxlength="100" autofocus value="<%= book.title %>">
                        <p class="title error"></p>
                    </div>
                    <div>
                        <label for="author">Authors / Editors</label>
                        <input type="text" name="author" maxlength="100" value="<%= book.author %>">
                        <p class="author error"></p>
                    </div>
                    <div>
                        <label for="isbn">ISBN</label>
                        <input type="text" name="isbn" maxlength="20" value="<%= book.isbn %>">
                        <p class="isbn error"></p>
                    </div>
                    <div>
                        <label for="callNo">Call No.</label>
                        <input type="text" name="callNo" maxlength="20" value="<%= book.callNo %>">
                        <p class="callNo error"></p>
                    </div>
                    <div>
                        <label for="description">Descrption</label>
                        <textarea name="description" cols="30" rows="10" maxlength="500"><%= book.description %></textarea>
                        <p class="description error"></p>
                    </div>
                    <div>
                        <label for="img">Browse an Image</label>
                        <input type="file" name="img" value="<%= book.img %>">
                        <P class="img error"></P>
                    </div>
                    <div class="checkbox-container">
                        <label for="isNewAddition">New Addition</label>
                        <input class="checkbox new-addition" type="checkbox" name="isNewAddition"
                            <% if (book.isNewAddition === true) { %>
                                <%= 'checked' %>
                            <% } %>
                        >
                    </div>
                    <div class="checkbox-container">           
                        <label for="loanable">Loanable</label>
                        <input class="checkbox loanable" type="checkbox" name="loanable"
                            <% if (book.loanable === true) { %>
                                <%= 'checked' %>
                            <% } %>
                        >
                    </div>
                    <div>
                        <button class="submit-btn" type="submit">Update</button>
                    </div>
                </form>
            </div>
            <span class="underscore-link"><a href="/">Return</a></span>
        </div>
    </main>
    <%- include('partials/footer'); %>
</body>
</html>