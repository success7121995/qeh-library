<!DOCTYPE html>
<html lang="en">
<%- include('partials/header'); %>
<body>
    <%- include('partials/nav'); %>
    <%- include('partials/hero'); %>
    <main class="view">
        <div class="main-container">
            <h2>Cart</h2>
            <% if (!cart) { %>
                <div class="grid grid-container1x">
                    <div class="grid grid-container1x">
                        <p class="content">No item in cart</p>
                    </div>
                </div> 
            <% } else { %>
                <div class="grid grid-container1x">
                <% cart.forEach(book => { %>      

                        <div class="grid-item grid-item1x">
                            <img src="<%= book.img %>" alt="">                   
                            <div class="book-container">
                                <h3> <%= book.title %></h3>
                                <div class="book-details">
                                    <div>
                                        <p>ISBN: <%= book.isbn %></p>
                                        <p>Call No: <%= book.callNo %></p>
                                    </div>
                                    <div class="book-btns">
                                        <div class="book-edit-btns">
                                            <button class="delete">Remove</button>
                                        </div>
                                    </div>
                                </div>                        
                            </div>
                            <svg class="expand-icon" viewBox="0 0 1024 1024">
                                <path d="M917.333333 364.8L851.2 298.666667 512 637.866667 172.8 298.666667 106.666667 364.8 512 768z"/>
                            </svg>
                        </div>
                        <div class="confirm-block">
                            <div class="confirm-prompt">
                                <div class="prompt-content">
                                  <h3>Are you sure?</h3>
                                  <p></p>
                                  <div class="confirm-btn-container">
                                      <button class="btn cancel-btn">Cancel</button>
                                      <button class="btn confirm-btn remove-btn"  data-doc="<%= book._id%>">Confirm</button>
                                  </div>
                                </div>
                              </div>
                        </div>

                <% }) %>
                    <div class="grid grid-container1x">
                        <button class="submit-btn" type="submit">Submit</button>
                    </div>
                </div>
            <% } %>

                <span class="underscore-link"><a href="/">Return</a></span>
            </div>
    </main>
    <%- include('partials/footer'); %>
</body>
</html>