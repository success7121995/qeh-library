<!DOCTYPE html>
<html lang="en">
<%- include('partials/header'); %>
<body>
    <%- include('partials/nav'); %>
    <main class="view">
        <div class="main-container login">
            <h2>Login</h2>
            <div class="grid grid-container1x">
                <form id="login-form" action="/users/login">
                    <div>
                        <label for="email">Email</label>
                        <input type="text" name="email" maxlength="50" autofocus>
                    </div>
                    <div>
                        <label for="password">Password</label>
                        <input type="password" name="password" maxlength="13" >
                    </div>
                    <p class="loginFailed error"></p>
                    <div>
                        <button class="submit-btn" type="submit">Login</button>
                    </div>
                </form>
            </div>
            <span class="underscore-link"><a href="/users/signup">Register</a></span>
            <span class="underscore-link"><a href="#">Forgot your password?</a></span>
        </div>
    </main>
    <%- include('partials/footer'); %>
</body>
</html>